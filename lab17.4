#include <stdio.h>
#include <math.h>

int main() {
    int n, v, num, m;
    printf("vvedite n = ");
    scanf("%d", &n);
    int a[n];
    v = 0;
    while (v<n) {
        printf("a[%d] = ", v);
        scanf("%d", &a[v]);
        v = v + 1;
    }
    v = 1;
    while (v<n) {
        if (a[v]>a[v-1]) {
            num = v;
            m = a[v];
        }
        else {
            if (a[v]<a[v-1]) {
                num = v - 1;
                m = a[v-1];
            }
        }
        v++;
    }
    printf("nomer poslednego localnogo maximuma num = %d", (num+1));
    return 0;
}
