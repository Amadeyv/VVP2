#include <stdio.h>
#include <math.h>

int main() {
    int n, v, a, d;
    printf("vvedite n = ");
    scanf("%d", &n);
    printf("vvedite pervii chlen a = ");
    scanf("%d", &a);
    printf("vvedite znamenatel d = ");
    scanf("%d", &d);
    int gp[n];
    v = 0;
    while (v<n) {
        gp[v] = a*pow(d, v);
        printf("gp[%d] = %d\n", v, gp[v]);
        v = v + 1;
    }
    return 0;
}
